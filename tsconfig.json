{
  "compilerOptions": {
    "baseUrl": "./frontend",
    "paths": {
      "lib/*": ["./src/lib/*"],
      "scenes/*": ["./src/scenes/*"],
      "~/*": ["./src/*"]
    },
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["frontend/**/*"],
  "exclude": ["node_modules/**/*", "staticfiles/**/*", "frontend/dist/**/*"]
}
